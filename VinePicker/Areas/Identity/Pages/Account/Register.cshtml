@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/cropit/dist/jquery.cropit.js"></script>

<style>
    .cropit-preview {
        background-color: #f8f8f8;
        background-size: cover;
        border: 1px solid #ccc;
        border-radius: 3px;
        margin-top: 7px;
        width: 250px;
        height: 250px;
    }

    .cropit-preview-image-container {
        cursor: move;
    }
</style>

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="form">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.DisplayName"></label>
                <input asp-for="Input.DisplayName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="image-editor">
                    <input type="file" class="cropit-image-input"/>
                    <div class="cropit-preview"></div>
                    <div class="image-size-label">Resize image</div>
                    <input type="range" class="cropit-image-zoom-input"/>
                    <input asp-for="Input.AvatarStr" type="hidden" class="hidden-image-data form-control"/>
                </div>
            </div>
            <button type="button" class="btn btn-dark" id="submit-button">Register</button>
        </form>
    </div>
</div>
<img class="displayImg" style="width: 100px; height: 100px; background-color: #f8f8f8;"/>

<script>
    $(function() {
        $('.image-editor').cropit({
            allowDragNDrop: false,
            minZoom: 'fit',
        });

        $('#submit-button').click(function () {
            var imageData = $('.image-editor').cropit('export', {
                type: 'image/png',
                originalSize: false,
            });
            $('.hidden-image-data').val(imageData);

            console.log(imageData);
            $('form').submit();
        });
    })
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
